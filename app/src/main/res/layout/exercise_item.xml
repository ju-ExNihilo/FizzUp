<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/underline_item"
        android:layout_marginStart="@dimen/exercise_item_layout_margin_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/exercise_item_pic"
            android:layout_width="@dimen/exercise_item_image_size"
            android:layout_height="@dimen/exercise_item_image_size"
            app:srcCompat="@drawable/ex_image_tools"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/exercise_item_name"
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/exercise_item_pic"
            app:layout_constraintBottom_toBottomOf="@+id/exercise_item_pic"
            app:layout_constraintStart_toEndOf="@+id/exercise_item_pic"
            style="@style/ExerciseNameDefaultStyle"/>
    <ImageView
            android:id="@+id/exercise_item_arrow"
            android:layout_width="@dimen/exercise_item_arrow_size"
            android:layout_height="@dimen/exercise_item_arrow_size"
            android:src="@drawable/ic_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/exercise_item_name"
            app:layout_constraintTop_toTopOf="@+id/exercise_item_name"
            android:layout_marginEnd="@dimen/exercise_item_arrow_margin_end"/>

</androidx.constraintlayout.widget.ConstraintLayout>